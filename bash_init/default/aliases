alias ls='ls -hFG'
alias l='ls'
alias la='ls -la'
alias ll='ls -l'
alias top='top -s 5 -o cpu -stats pid,user,command,cpu,rsize,vsize,threads,state'
# Requires ack. sudo port install p5-app-ack
alias compassdir="cd \`ack -g \"config.rb\" | ruby -pe 'gsub(/\\/[^\\/]*\$/, \"\")'\`"

function r() {
  if [[ "g|generate|c|console|s|server|db|dbconsole|new" =~ $1 ]]; then
    rails $@
  else
    rake $@
  fi
}

function man {
  open x-man-page://$1
}
