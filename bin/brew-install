#!/bin/bash

set -e

mkdir -p "$(brew --cache)"
brew cleanup --force
brew update
brew upgrade

# Needed for Rails development
brew install homebrew/dupes/apple-gcc42 git postgresql qt

# Better versions of Mac built-ins
brew install bash bash-completion colordiff homebrew/dupes/rsync
brew install homebrew/dupes/grep --default-names

# Bash completions
brew tap homebrew/completions
brew install django-completion rails-completion rake-completion

# More nice-to-haves and various development libraries
brew install ack ctags dos2unix elasticsearch graphviz iftop imagemagick \
  macvim mercurial mtr multimarkdown ngrok node nviennot/tmate/tmate \
  phantomjs pyenv pyenv-virtualenvwrapper python qpdf s3cmd sleepwatcher \
  ssh-copy-id terminal-notifier trash tree wdiff wget

# For deployd
brew install mongodb

# Color calibration
brew tap gsong/homebrew-formulae
brew install argyllcms

# IPython Qt
brew install pyqt zmq

# Computational physics packages for working with Jessica
brew install freetype

brew linkapps --local
