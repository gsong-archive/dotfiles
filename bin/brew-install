#!/bin/bash

set -e

brew cleanup --force
brew update
brew upgrade

# Needed for Rails development
brew install apple-gcc42 git postgresql qt

# Better versions of Mac built-ins
brew install bash bash-completion colordiff homebrew/dupes/grep

# Older versions of Python
brew install homebrew/versions/python25 homebrew/versions/python26

# More nice-to-haves and various development libraries
brew install ack ctags dos2unix graphviz \
  homebrew/completions/django-completion iftop imagemagick macvim mercurial \
  mtr multimarkdown node nviennot/tmate/tmate phantomjs python qpdf s3cmd \
  sleepwatcher ssh-copy-id terminal-notifier tree wdiff wget

# Color calibration
brew install argyll

brew unlink python && brew link python
