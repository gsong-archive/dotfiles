#!/bin/bash

set -e

mkdir -p "$(brew --cache)"
brew cleanup --force
brew update
brew upgrade

# Needed for Rails development
brew install apple-gcc42 git postgresql qt

# Better versions of Mac built-ins
brew install bash bash-completion colordiff homebrew/dupes/grep

# Bash completions
brew tap homebrew/completions
brew install django-completion rails-completion rake-completion

# More nice-to-haves and various development libraries
brew install ack ctags dos2unix elasticsearch graphviz iftop imagemagick \
  macvim mercurial mtr multimarkdown node nviennot/tmate/tmate phantomjs \
  pyenv pyenv-virtualenvwrapper qpdf s3cmd sleepwatcher ssh-copy-id \
  terminal-notifier tree wdiff wget

# Color calibration
brew tap gsong/homebrew-formulae
brew install argyllcms
