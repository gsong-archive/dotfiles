#!/usr/bin/env bash
set -e

sudo cat /dev/null

brew update-reset && brew update
brew cask cleanup

## Quick Look plugins
caffeinate brew cask install --force \
  qlcolorcode qlmarkdown qlprettypatch qlstephen quicklook-csv quicklook-json webpquicklook
qlmanage -r

## OS X apps
caffeinate brew cask install --force \
  etrecheck fluid keepingyouawake keyboardcleantool namebench private-eye vagrant virtualbox

## OS X preference panes
caffeinate brew cask install --force functionflip rcdefaultapp

## Java
caffeinate brew cask install --force java
