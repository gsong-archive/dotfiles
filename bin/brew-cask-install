#!/usr/bin/env bash
set -e

brew update-reset && brew update
brew cask cleanup

## Quick Look plugins
caffeinate brew cask install --force --verbose \
  qlcolorcode qlmarkdown qlprettypatch qlstephen quicklook-csv quicklook-json webpquicklook
qlmanage -r

## OS X apps
caffeinate brew cask install --force --verbose \
  calibre etrecheck fluid handbrake keepingyouawake keyboardcleantool namebench pgadmin4 private-eye vagrant virtualbox

## OS X preference panes
caffeinate brew cask install --force --verbose functionflip rcdefaultapp

## Java
caffeinate brew cask install --force --verbose java
