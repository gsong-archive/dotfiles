    file 'syntax/python.vim', 'http://www.vim.org/scripts/download_script.php?src_id=17429'
  end
  folder 'vim-colors-solarized', 'git://github.com/altercation/vim-colors-solarized.git'
  folder 'vim-markdown', 'git://github.com/tpope/vim-markdown.git'
  folder 'vim-rails', 'git://github.com/tpope/vim-rails.git'
  folder 'vim-ruby', 'git://github.com/vim-ruby/vim-ruby.git'
  folder 'vim-applescript', 'git://github.com/vim-scripts/applescript.vim.git'
end
