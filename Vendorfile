  folder 'nerdtree', 'git://github.com/scrooloose/nerdtree.git'
  folder 'python', 'git://github.com/hynek/vim-python-pep8-indent.git'
  folder 'python' do
    file 'ftplugin/python/pep8.vim', 'http://www.vim.org/scripts/download_script.php?src_id=14366'
    file 'syntax/python.vim', 'http://www.vim.org/scripts/download_script.php?src_id=17429'
  end
  folder 'syntastic', 'git://github.com/scrooloose/syntastic.git'
  folder 'vim-applescript', 'git://github.com/vim-scripts/applescript.vim.git'
  folder 'vim-coffee-script', 'git://github.com/kchmck/vim-coffee-script.git'
  folder 'vim-colors-solarized', 'git://github.com/altercation/vim-colors-solarized.git'
  folder 'vim-haml', 'git@github.com:tpope/vim-haml.git'
  folder 'vim-markdown', 'git://github.com/tpope/vim-markdown.git'
  folder 'vim-rails', 'git://github.com/tpope/vim-rails.git'
  folder 'vim-ruby', 'git://github.com/vim-ruby/vim-ruby.git'
  folder 'vim-sensible', 'git://github.com/tpope/vim-sensible.git'
  folder 'zencoding-vim', 'git://github.com/mattn/zencoding-vim.git'
end
