  folder 'bufexplorer', 'git://github.com/corntrace/bufexplorer.git'
  folder 'ctrlp.vim', 'git@github.com:kien/ctrlp.vim.git'
  folder 'greplace', 'git://github.com/vim-scripts/greplace.vim.git'
